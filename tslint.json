{
    "extends": [
        "tslint-react",
        "tslint-eslint-rules",
        "tslint:recommended",
        "tslint-whitespace-before-colon",
        "tslint-react-hooks"
    ],
    "linterOptions": {
        "exclude": [
            "**/**.js"
        ]
    },
    "rules": {
        "array-bracket-spacing": [
            true,
            "never"
        ],
        "arrow-parens": false,
        "arrow-return-shorthand": true,
        "member-access": false,
        "ban": false,
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "interface-name": false,
        "interface-over-type-literal": true,
        "block-spacing": [
            true,
            "always"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": false,
        "forin": true,
        "handle-callback-err": [
            true,
            "^(err|error)$"
        ],
        "import-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": true,
        "jsx-boolean-value": [
            "never"
        ],
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-curly-spacing": false,
        "label-position": true,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^\\s*(d|points)=\"[A-Za-z.0-9,\\s-]*\"$"
            }
        ],
        "new-parens": true,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [true, "clear", "assert", "count", "countReset", "dir", "dirxml", "group", "groupCollapsed", "groupEnd", "log", "profile", "profileEnd", "table", "time", "timeEnd", "timeStamp", "trace", "warn"],
        "no-consecutive-blank-lines": [
            true
        ],
        "no-constant-condition": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-multi-spaces": [
            true
        ],
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-reference": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "object-curly-spacing": [
            true,
            "always"
        ],
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "prefer-template": [
            true,
            "allow-single-concat"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": [
            true,
            "always"
        ],
        "switch-default": true,
        "ter-arrow-spacing": [
            true
        ],
        "ter-func-call-spacing": [
            true
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "react-hooks-nesting": "error",
        "space-in-parens": [
            true,
            "never"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "whitespace-before-colon": [
            true,
            "nospace"
        ]
    }
}